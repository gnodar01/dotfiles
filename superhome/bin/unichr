#!/bin/zsh

# int to unicode codepoint

# print out Private Use Area:
#   https://en.wikipedia.org/wiki/Private_Use_Areas
#
# for (( i=0xE000; i<0xEEA0; i++ )); do printf "%s " $(echo -ne $i | unichr); done; printf "\n"
#
# Nerd Font ranges documented here:
#   https://github.com/ryanoasis/nerd-fonts/wiki/Glyph-Sets-and-Code-Points#overview

read -r contents

if [[ $contents =~ ^[0-9]+$ ]]; then
    contents=$((10#$contents))
else
    echo "$contents is not a decimal" >&2
    exit 1
fi

if [[ $contents -lt 0 ]]; then
    echo "$contents is not a positive int" >&2
    exit 1
fi

if [[ $contents -ge 0x110000 ]]; then
    echo "$contents is out of range" >&2
    exit 1
fi

# Convert decimal to hexadecimal
hex_contents=$(printf "%X" "$contents")

# Print Unicode character using printf
printf -v unicode_char "\\U$hex_contents"

# Print the Unicode character
echo -ne "$unicode_char"

